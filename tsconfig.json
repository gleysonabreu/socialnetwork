{
  "compilerOptions": {    
    "target": "ES2017",                          
    "module": "commonjs",                     
    "lib": ["ES6"],                             
    "allowJs": true,                       
    "outDir": "./dist",                         
    "rootDir": "./",                         
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types"
    ],
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@database/*": ["./src/database/*"]
    }
  }
}
